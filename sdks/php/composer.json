{
    "name": "whatsyour/info-php",
    "description": "Official PHP SDK for What'sYour.Info API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DishIs Technologies",
            "email": "support@whatsyour.info"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "WhatsYourInfo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WhatsYourInfo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}